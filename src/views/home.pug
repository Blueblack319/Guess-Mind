<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/static/styles/style.css")
        title Guess Mind
    body
        .loginBox
            form#js-loginForm
                input(type="text", placeholder="What's your nickname?")
        .gameContainer#js-gameContainer
            .paintingBoard
                .notifs#js-notifs
                canvas(width=750, height=550)#js-canvas
                .controls#js-controls
                    input(type="range", list="tickmarks",min="1", max="13" value="1").thickness#js-thickness
                    datalist(id="tickmarks")
                        option(value="1")
                        option(value="2")
                        option(value="3")
                        option(value="4")
                        option(value="5")
                        option(value="6")
                        option(value="7")
                        option(value="8")
                        option(value="9")
                        option(value="10")
                        option(value="11")
                        option(value="12")
                        option(value="13")
                    .buttons
                        button#js-changeMode fill
                        button#js-save save
                    .colors
                        button.color#js-color(style="background-color:rgb(0, 0, 0)")
                        button.color#js-color(style="background-color:rgb(255,255,255)")
                        button.color#js-color(style="background-color:rgb(255,59,48)")
                        button.color#js-color(style="background-color:rgb(255,149,0)")
                        button.color#js-color(style="background-color:rgb(255,204,0)")
                        button.color#js-color(style="background-color:rgb(76,217,100)")
                        button.color#js-color(style="background-color:rgb(90,200,250)")
                        button.color#js-color(style="background-color:rgb(0,122,255)")
                        button.color#js-color(style="background-color:rgb(88,86,214)")
            .chat
                ul.messages#js-messages
                form.sendMsg#js-sendMsgForm
                    input(type="text", placeholder="Write a message")
            .gameProgress
                .timer#js-timer
                .players#js-players
                    
        script.
            window.events=!{events}
        script(src="/socket.io/socket.io.js")
        script(src="/static/js/main.js")